<Window x:Class="GroundWellDesign.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms" 
        xmlns:ax="clr-namespace:AxMxDrawXLib;assembly=AxInterop.MxDrawXLib" 
        xmlns:local="clr-namespace:GroundWellDesign"
        xmlns:assembly="clr-namespace:System;assembly=mscorlib"
        Title="地面井设计程序" >

    <Window.Resources>

    </Window.Resources>

    <Grid>
        <!-- 效果部分-->
        <Border Background="Transparent" BorderThickness="1" BorderBrush="Black" Margin="-1" Grid.ColumnSpan="2">
            <Border.Effect>
                <BlurEffect/>
            </Border.Effect>
        </Border>

        <!-- 主体部分 -->
        <Border BorderBrush="Black" BorderThickness="1" ClipToBounds="True" SnapsToDevicePixels="True" Grid.ColumnSpan="2">
            <TabControl x:Name="tabControl"  Style="{DynamicResource TabControlStyle2}" Margin="0,0,0,0">
                <TabItem Header="岩性评价系数" IsSelected="True" Style="{DynamicResource TabItemStyle2}">
                    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                        <DataGrid x:Name="pjxsGrid" Margin="0,0,0,0" AutoGenerateColumns="False" ItemsSource="{Binding}" CanUserAddRows="False" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                            <DataGrid.Columns>
                                <DataGridComboBoxColumn Header="岩性" SelectedItemBinding="{Binding YanXing, UpdateSourceTrigger=PropertyChanged}" 
                                        ItemsSource="{x:Static local:LayerParams.YanXingOpt}" IsReadOnly="True"/>
                                <DataGridTextColumn Binding="{Binding Q0, UpdateSourceTrigger=PropertyChanged}"   Header="初次采动Q0"/>
                                <DataGridTextColumn Binding="{Binding Q1, UpdateSourceTrigger=PropertyChanged}"   Header="重复采动Q1"/>
                                <DataGridTextColumn Binding="{Binding Q2, UpdateSourceTrigger=PropertyChanged}"   Header="重复采动Q2" />
                            </DataGrid.Columns>
                        </DataGrid>

                    </Grid>
                </TabItem>


                <TabItem Header="表格式录入"  Style="{DynamicResource TabItemStyle2}">
                    <Grid>
                        <DataGrid x:Name="dataGrid" Margin="0,0,0,0" AutoGenerateColumns="False" ItemsSource="{Binding}" CanUserAddRows="False">
                            <DataGrid.Columns>
                                <DataGridComboBoxColumn Header="岩性" SelectedItemBinding="{Binding YanXing, UpdateSourceTrigger=PropertyChanged}" 
                                        ItemsSource="{x:Static local:LayerParams.YanXingOpt}"/>

                                <DataGridComboBoxColumn Header="采动情况" SelectedItemBinding="{Binding CaiDong, UpdateSourceTrigger=PropertyChanged}" 
                                        ItemsSource="{x:Static local:LayerParams.CaiDongOpt}"/>
                                
                                <DataGridTextColumn Binding="{Binding LeiJiShenDu, UpdateSourceTrigger=LostFocus, StringFormat='n3'}"   Header="累计深度/m"/>
                                <DataGridTextColumn Binding="{Binding JuLiMeiShenDu, UpdateSourceTrigger=LostFocus, StringFormat='n3'}"   Header="距离煤层深度"/>
                                <DataGridTextColumn Binding="{Binding CengHou, UpdateSourceTrigger=LostFocus, StringFormat='n3'}"   Header="层厚"/>
                                <DataGridTextColumn Binding="{Binding ZiRanMiDu, UpdateSourceTrigger=LostFocus, StringFormat='n3'}"   Header="自然视密度"/>
                                <DataGridTextColumn Binding="{Binding BianXingMoLiang, UpdateSourceTrigger=LostFocus, StringFormat='n3'}"   Header="变形模量/MPa"/>
                                <DataGridTextColumn Binding="{Binding KangLaQiangDu, UpdateSourceTrigger=LostFocus, StringFormat='n3'}"   Header="抗拉强度/MPa"/>
                                <DataGridTextColumn Binding="{Binding KangYaQiangDu, UpdateSourceTrigger=LostFocus, StringFormat='n3'}"   Header="抗压强度"/>
                                <DataGridTextColumn Binding="{Binding TanXingMoLiang, UpdateSourceTrigger=LostFocus, StringFormat='n3'}"   Header="弹性模量/MPa"/>
                                <DataGridTextColumn Binding="{Binding BoSonBi, UpdateSourceTrigger=LostFocus, StringFormat='n3'}"   Header="泊松比"/>
                                <DataGridTextColumn Binding="{Binding NeiMoCaJiao, UpdateSourceTrigger=LostFocus, StringFormat='n3'}"   Header="内摩擦角"/>
                                <DataGridTextColumn Binding="{Binding NianJuLi, UpdateSourceTrigger=LostFocus, StringFormat='n3'}"   Header="粘聚力"/>
                                <DataGridTextColumn Binding="{Binding MiaoShu, UpdateSourceTrigger=LostFocus}"   Header="岩性描述" Width="*"/>
                            </DataGrid.Columns>
                            <DataGrid.ContextMenu>
                                <ContextMenu Name="dgMenu" StaysOpen="true">
                                    <MenuItem Header="下方增行" Click="MenuItem_Click_1"/>
                                    <MenuItem Header="上移" Click="MenuItem_Click_2" />
                                    <MenuItem Header="下移" Click="MenuItem_Click_3" />
                                    <MenuItem Header="删除此行" Click="MenuItem_Click"/>

                                </ContextMenu>
                            </DataGrid.ContextMenu>
                        </DataGrid>
                    </Grid>
                </TabItem>

                <TabItem Header="向导式录入" Style="{DynamicResource TabItemStyle2}">



                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50*"/>
                            <ColumnDefinition Width="100*"/>
                            <ColumnDefinition Width="100*"/>
                            <ColumnDefinition Width="100*"/>
                            <ColumnDefinition Width="100*"/>
                            <ColumnDefinition Width="100*"/>
                            <ColumnDefinition Width="100*"/>
                            <ColumnDefinition Width="50*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="31*"/>
                            <RowDefinition Height="45*"/>
                            <RowDefinition Height="43*"/>
                            <RowDefinition Height="45*"/>
                            <RowDefinition Height="43*"/>
                            <RowDefinition Height="51*"/>
                            <RowDefinition Height="49*"/>
                            <RowDefinition Height="43*"/>
                            <RowDefinition Height="19*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Column="3" Grid.Row="1" Text="描述"  HorizontalAlignment="Center" VerticalAlignment="Center" />
                        <TextBox x:Name="miaoshuTb" Grid.Column="4" Grid.Row="1" Grid.ColumnSpan="3" />
                        <TextBlock Grid.Column="1" Text="层号" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBox x:Name="currLayerTb" Grid.Column="2" Grid.Row="1" Text="1"  />
                        <TextBlock Text="采动情况" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        <ComboBox x:Name="caiDongCB"  Grid.Column="2" Grid.Row="2" ItemsSource="{x:Static local:LayerParams.CaiDongOpt}"/>
                        <TextBlock Text="岩性" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        <ComboBox x:Name="yanXingCB"  Grid.Column="2" Grid.Row="3" ItemsSource="{x:Static local:LayerParams.YanXingOpt}"/>
                        <TextBlock Grid.Column="3" Grid.Row="3" Text="累计深度/m"  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBox x:Name="leiJiShenDuTb" Grid.Column="4" Grid.Row="3" />
                        <TextBlock Grid.Column="5" Grid.Row="3" Text="距离煤层深度"  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBox x:Name="juLiMeiShenDuTb" Grid.Column="6" Grid.Row="3" />
                        <TextBlock Grid.Column="1" Grid.Row="4" Text="层厚/m"  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBox x:Name="cengHouTb" Grid.Column="2" Grid.Row="4" />
                        <TextBlock Grid.Column="3"  Grid.Row="4" Text="自然视密度" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBox x:Name="ziRanMiDuTb" Grid.Column="4" Grid.Row="4" />
                        <TextBlock Grid.Column="5" Grid.Row="4" Text="变形模量"  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBox x:Name="bianXingMoLiangTb" Grid.Column="6" Grid.Row="4" />
                        <TextBlock Grid.Column="1" Grid.Row="5" Text="抗拉强度"  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBox x:Name="kangLaQiangDuTb" Grid.Column="2" Grid.Row="5" />
                        <TextBlock Grid.Column="3" Grid.Row="5" Text="抗压强度" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBox x:Name="kangYaQiangDuTb" Grid.Column="4" Grid.Row="5" />
                        <TextBlock Grid.Column="5" Grid.Row="5" Text="弹性模量"  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBox x:Name="tanXingMoLiangTb" Grid.Column="6" Grid.Row="5" />
                        <TextBlock Grid.Column="1" Grid.Row="6" Text="泊松比" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBox x:Name="boSonBiTb" Grid.Column="2" Grid.Row="6"  />
                        <TextBlock Grid.Column="3" Grid.Row="6" Text="内摩擦角" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        <TextBox x:Name="neiMoCaJiaoTb" Grid.Column="4" Grid.Row="6" />
                        <TextBlock Grid.Column="5" Grid.Row="6" Text="粘聚力"  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBox x:Name="nianJuLiTb" Grid.Column="6" Grid.Row="6"/>

                        <Button Content="保存" Grid.Row="7" Grid.Column="2" Click="saveBtn_Click" />
                        <Button  Content="重置" Grid.Column="3" Grid.Row="7"  Click="resetBtn_Click"/>
                        <Button  Content="上一层" Grid.Column="4" Grid.Row="7" Click="preBtn_Click"/>
                        <Button  Content="下一层" Grid.Column="5" Grid.Row="7"  Click="nextBtn_Click"/>
                        <Button  Content="完成" Grid.Column="6"  Grid.Row="7" Click="stopBtn_Click"/>


                    </Grid>
                </TabItem>



                <TabItem Header="CAD插件" Style="{DynamicResource TabItemStyle2}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="400*"/>
                            <RowDefinition Height="43*"/>
                        </Grid.RowDefinitions>
                        <WindowsFormsHost Grid.Row="0" Margin="0,0,0.4,2">
                            <ax:AxMxDrawX x:Name="mxDraw"/>
                        </WindowsFormsHost>

                        <Button Content="打开dwg文件" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top"  Click="OpenBtn_Click" Height="22" Width="90" Grid.Row="1"/>
                        <Button Content="修改标注" HorizontalAlignment="Left" Margin="137,10,0,0" VerticalAlignment="Top" Click="EditBtn_Click" Height="21" Width="59" Grid.Row="1"/>




                    </Grid>
                </TabItem>



            </TabControl>
        </Border>
    </Grid>
</Window>
